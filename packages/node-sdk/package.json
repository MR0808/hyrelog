{
  "name": "@hyrelog/node",
  "version": "1.0.0",
  "description": "Official HyreLog Node.js/TypeScript SDK",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./adapters": {
      "import": "./dist/adapters/index.js",
      "types": "./dist/adapters/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "hyrelog",
    "audit",
    "logging",
    "sdk"
  ],
  "author": "HyreLog",
  "license": "MIT",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18"
  }
}

