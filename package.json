{
    "name": "hyrelog",
    "version": "1.0.0",
    "description": "HyreLog - Audit Trail Data API",
    "type": "module",
    "main": "dist/server.js",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc -p tsconfig.json",
        "start": "node dist/server.js",
        "lint": "tsc --noEmit",
        "seed": "tsx prisma/seed.ts",
        "worker": "tsx src/workers/index.ts",
        "worker:webhook": "tsx src/workers/webhookWorker.ts",
        "worker:jobs": "tsx src/workers/jobProcessor.ts",
        "docs:generate": "tsx scripts/generate-sdk-docs.ts"
    },
    "keywords": [
        "audit",
        "fastify",
        "prisma"
    ],
    "author": "HyreLog",
    "license": "MIT",
    "engines": {
        "node": ">=22"
    },
    "dependencies": {
        "@aws-sdk/client-glacier": "^3.943.0",
        "@aws-sdk/client-s3": "^3.943.0",
        "@fastify/sensible": "^6.0.4",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/exporter-otlp-http": "^0.26.0",
        "@opentelemetry/instrumentation-fastify": "^0.53.0",
        "@opentelemetry/instrumentation-http": "^0.208.0",
        "@opentelemetry/resources": "^2.2.0",
        "@opentelemetry/sdk-node": "^0.208.0",
        "@opentelemetry/semantic-conventions": "^1.38.0",
        "@prisma/adapter-pg": "^7.1.0",
        "@prisma/client": "^7.1.0",
        "@prisma/instrumentation": "^7.1.0",
        "@types/argon2": "^0.15.4",
        "ajv": "^8.17.1",
        "argon2": "^0.44.0",
        "dotenv": "^17.2.3",
        "fastify": "^5.6.2",
        "fastify-plugin": "^5.1.0",
        "node-cron": "^4.2.1",
        "pg": "^8.16.3",
        "pino": "^10.1.0",
        "zod": "^4.1.13",
        "zod-to-json-schema": "^3.25.0"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20251202.0",
        "@types/aws-lambda": "^8.10.159",
        "@types/node": "^24.10.1",
        "@types/node-cron": "^3.0.11",
        "@types/pg": "^8.15.6",
        "@vercel/node": "^5.5.15",
        "prisma": "^7.1.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    }
}
